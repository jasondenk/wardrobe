@model IEnumerable<wardrobe.Models.Accessory>

@{
    ViewBag.Title = "Index";
}

<h2>Accessories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <!--Takes each accessory and puts it in a thumbnail, 3 thumbnails across medium pages-->
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <p>@Html.ActionLink("Details", "Details", new { id = item.AccessoryID }, new { @class = "btn btn-primary", role = "button" })</p>
                    <h2>@Html.DisplayFor(modelItem => item.Name)</h2>
                    <p><strong> Color: @Html.DisplayFor(modelItem => item.Color) </strong></p>
                    <img src="@Url.Content(item.Photo)" class="img-responsive" />
                    
                </div>
            </div>
        </div>
    }
</div>

