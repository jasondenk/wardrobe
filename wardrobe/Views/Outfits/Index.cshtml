@model IEnumerable<wardrobe.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>Outfits</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <!--Takes each outfit and puts it in a thumbnail, 3 thumbnails across medium pages-->
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <p>@Html.ActionLink("Details", "Details", new { id = item.OutfitID }, new { @class = "btn btn-primary", role = "button" })</p>
                    @Html.DisplayFor(modelItem => item.Accessory.Name)
                    <img src="@Url.Content(item.Accessory.Photo)" class="img-responsive" />
                    @Html.DisplayFor(modelItem => item.Top.Name)
                    <img src="@Url.Content(item.Top.Photo)" class="img-responsive" />
                    @Html.DisplayFor(modelItem => item.Bottom.Name)
                    <img src="@Url.Content(item.Bottom.Photo)" class="img-responsive" />
                    @Html.DisplayFor(modelItem => item.Shoe.Name)
                    <img src="@Url.Content(item.Shoe.Photo)" class="img-responsive" />
                </div>
            </div>
        </div>
    }
</div>
